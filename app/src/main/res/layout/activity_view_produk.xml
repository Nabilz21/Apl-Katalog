<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ViewProdukActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/md_theme_primaryContainer"
        app:navigationIcon="@drawable/ic_arrow_left"
        app:title="View Produk"
        app:titleTextAppearance="@style/NavTitle"></androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/md_theme_surfaceDim"
            android:gravity="center_vertical|center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="250dp"
                android:layout_height="170dp"
                android:layout_margin="20dp"
                android:src="@drawable/img_router" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/md_theme_secondaryContainer" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    style="@style/TextSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. "
                    android:textColor="@color/md_theme_black"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/hargaProduk"
                    style="@style/TextSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.499.000"
                    android:textColor="@color/md_theme_black"
                    android:textSize="19dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/namaProduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:maxLines="2"
                android:paddingLeft="20dp"
                android:text="TP-LINK ARCHER AX50 WI-FI ROUTER"
                android:textColor="@color/md_theme_black"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/md_theme_surfaceDim"
            android:orientation="vertical">

            <TextView
                style="@style/TextSemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="Detail Produk :"
                android:textColor="@color/md_theme_black"
                android:textSize="18dp" />

            <!--            Isi Detail Produk-->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/detail_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Merek"
                        android:textColor="@color/md_theme_black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/isi_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TP-Link"
                        android:textColor="@color/md_theme_black"
                        android:textSize="15dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/md_theme_secondaryContainer" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/detailGaransi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Garansi"
                        android:textColor="@color/md_theme_black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/isiGaransi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="12 Bulan"
                        android:textColor="@color/md_theme_black"
                        android:textSize="15dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/md_theme_secondaryContainer" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp">

                    <TextView
                        android:id="@+id/detailStok"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Stok"
                        android:textColor="@color/md_theme_black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/isiStok"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="20"
                        android:textColor="@color/md_theme_black"
                        android:textSize="15dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/md_theme_secondaryContainer" />

            </GridLayout>

            <TextView
                style="@style/TextSemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="Deskripsi Produk :"
                android:textColor="@color/md_theme_black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/deskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Next-Gen Gigabit Wi-Fi 6 Kecepatanâ€”2402 Mbps pada 5 GHz dan 574 Mbps pada pita 2,4 GHz memastikan streaming yang lebih lancar dan unduhan yang lebih cepat."
                android:textColor="@color/md_theme_black"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/md_theme_primaryContainer"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/btnContact"
            style="@style/TextSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/box_button_contact"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="Contact"
            android:textSize="20dp" />

    </LinearLayout>

</RelativeLayout>