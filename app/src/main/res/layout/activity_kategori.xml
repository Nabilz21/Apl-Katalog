<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.KategoriActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_arrow_left"
        app:title="Kategori"
        app:titleTextAppearance="@style/NavTitle"
        android:layout_alignParentTop="true"
        android:background="@color/md_theme_primaryContainer">


    </androidx.appcompat.widget.Toolbar>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:columnCount="2"
        android:padding="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/kategori_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/box_item_category"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_1"
                    style="@style/MarginItemCat"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_laptop" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/md_theme_secondaryContainer" />

                <TextView
                    style="@style/TextSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="Laptop"
                    android:textColor="@color/md_theme_black"
                    android:textSize="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/kategori_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/box_item_category"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_2"
                    style="@style/MarginItemCat"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_smartphone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/md_theme_secondaryContainer" />

                <TextView
                    style="@style/TextSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="Smartphone"
                    android:textColor="@color/md_theme_black"
                    android:textSize="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/kategori_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/box_item_category"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_3"
                    style="@style/MarginItemCat"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_monitor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/md_theme_secondaryContainer" />

                <TextView
                    style="@style/TextSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="Monitor"
                    android:textColor="@color/md_theme_black"
                    android:textSize="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/kategori_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/box_item_category"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_4"
                    style="@style/MarginItemCat"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_router" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/md_theme_secondaryContainer" />

                <TextView
                    style="@style/TextSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="Router"
                    android:textColor="@color/md_theme_black"
                    android:textSize="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/kategori_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/box_item_category"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_5"
                    style="@style/MarginItemCat"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_printer" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/md_theme_secondaryContainer" />

                <TextView
                    style="@style/TextSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="Printer"
                    android:textColor="@color/md_theme_black"
                    android:textSize="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/kategori_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/box_item_category"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_6"
                    style="@style/MarginItemCat"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_keyboard" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/md_theme_secondaryContainer" />

                <TextView
                    style="@style/TextSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="Accessories"
                    android:textColor="@color/md_theme_black"
                    android:textSize="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/md_theme_primaryContainer"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/btnContact"
            style="@style/TextSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/box_button_contact"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="Contact"
            android:textSize="20dp" />

    </LinearLayout>

</RelativeLayout>